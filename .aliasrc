# Docker aliases
alias composer='docker run --rm -it -v `pwd`:/app -w /app wodby/drupal-php:8.0-dev-macos-4.27.3 composer '
alias drush='docker run --rm -it -p 8080:8080 -v `pwd`:/app -w /app wodby/drupal-php:8.0-dev-macos-4.27.3 drush '
alias node='docker run --rm -it -v `pwd`:/app -w /app node:16-alpine '
alias npm='docker run --rm -it -p 8080:8080 -v `pwd`:/app -w /app node:16-alpine npm '
alias npx='docker run --rm -it -v `pwd`:/app -w /app node:16-alpine npx '
alias php='docker run --rm -it -p 8080:8080 -v `pwd`:/app -w /app wodby/drupal-php:8.0-dev-macos-4.27.3 php '
alias sass='docker run --rm -it -v `pwd`:/sass -v `pwd`:/output orianna/dart-sass:latest --watch --no-source-map '
alias aws='docker run --rm -it -v ~/.aws:/root/.aws -v `pwd`:/aws amazon/aws-cli '
